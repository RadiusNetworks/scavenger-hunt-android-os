<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radiusnetworks.scavengerhunt"
    android:versionCode="2"
    android:versionName="1.1" >
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>  <!-- needed to see if app is running in background -->
    <application
        android:debuggable="true"
        android:name="com.radiusnetworks.scavengerhunt.ScavengerHuntApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Beacon Hunt"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FinishedActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.radiusnetworks.scavengerhunt.LoadingActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.radiusnetworks.scavengerhunt.TargetCollectionActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.radiusnetworks.scavengerhunt.TargetItemActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.radiusnetworks.scavengerhunt.HelpActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
    </application>




</manifest>
