<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context=".TargetItemActivity" >

    <TextView
        android:id="@+id/sh_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Distance"
        android:textColor="@android:color/white"
        android:textSize="100dp" />

    <TextView
        android:id="@+id/sh_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sh_textView1"
        android:layout_centerHorizontal="true"
        android:text="--"
        android:textColor="@android:color/white"
        android:textSize="360dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sh_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sh_distance"
        android:layout_centerHorizontal="true"
        android:text="Meters"
        android:textColor="@android:color/white"
        android:textSize="100dp" />

    <ProgressBar
        android:id="@+id/sh_progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sh_textView1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
