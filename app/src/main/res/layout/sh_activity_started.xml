<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/sh_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="28dp" /> 
        
    <TextView
        android:id="@+id/sh_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sh_textView1"
        android:layout_marginTop="23dp"
        android:textColor="#FFFFFF"
        android:text="On the next page, you will see a list of scavenger hunt badges to find and collect.\n\nFind each location indicated on the badge symbols.  When you are within 10 meters of the location, you will receive a notification and a colored badge will appear on your list.\n" />

    <Button
        android:id="@+id/sh_start_button"
		style="@style/sh_custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sh_start_button"
        android:layout_below="@+id/sh_hunt_status_text"
        android:layout_marginTop="23dp"
        android:onClick="onStartClicked"
        android:text="Continue Hunt"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/sh_hunt_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sh_textView2"
        android:text="You have found X of Y locations and have been hunting for Z minutes."
        android:textColor="#FFFFFF"
        android:layout_below="@+id/sh_textView2" />

    <Button
        android:id="@+id/sh_reset_button"
       	style="@style/sh_custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sh_start_button"
        android:layout_alignBottom="@+id/sh_start_button"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/sh_start_button"
        android:onClick="onResetClicked"
        android:text="Start Over"
        android:textColor="#FFFFFF" />

</RelativeLayout>